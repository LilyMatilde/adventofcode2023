
function findNumberInstring() {
let input = 'pqr3vwx';
let numbers = '0123456789';
console.log(input);

function check(x){
  return numbers.includes(x)? true:false;
}
let matches = [...input].reduce(
  (x,y) => (check(y) ? x + y: x), '');

// this should display if a number is extracted
if (matches.length == 1){
  matches + matches;
  console.log(matches);
  } 
 let result = matches;
  return result;
}

let calibrationNumbers = findNumberInstring();
console.log (calibrationNumbers.substring(0,1) + calibrationNumbers.slice(-1));

